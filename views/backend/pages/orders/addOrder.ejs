<%- include("../../partials/header.ejs") %> <%-
include("../../partials/sidebar.ejs") %>
<div class="main-content">
  <section class="section">
    <div class="section-body">
      <div class="row">
        <div class="col-12 col-md-12 col-lg-12">
          <div class="card">
            <div class="card-header">
              <h4>Add Order</h4>
            </div>
            <% if(message.success){ %>
            <div class="alert alert-success"><%= message.success %></div>
            <% }else if(message.fail) { %>
            <div class="alert alert-danger"><%= message.fail %></div>
            <% } %>
            <div class="card-body">
              <form  method="post"  id="add_order">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Bussiness  Name</label>
                           
                              <input
                                type="text"
                                class="form-control"
                                name="b_name" value="AM Fragrance"
                              />
                            </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Date</label>
                           
                              <input
                                type="date"
                                class="form-control"
                                name="date" value="AM Fragrance"
                              />
                            </div>
                    </div>
                </div>
                
              

                <h4>Pickup Address</h4>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Name</label>
          
                              <input
                                type="text"
                                class="form-control"
                                name="p_name" value="AM Frafrance"
                              />
                            </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Email</label>
          
                              <input
                                type="email"
                                class="form-control"
                                name="p_email" value="info@amfragrance.com"
                              />
                            </div>
                    </div>
                  
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Phone</label>
          
                              <input
                                type="number"
                                class="form-control"
                                name="p_phone"
                                value="03076803537"
                              />
                            </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>City</label>
          
                              <input
                                type="text"
                                class="form-control"
                                name="p_city"
                                value="Lahore"
                              />
                            </div>
                    </div>

                    <div class="col-md-8">
                        <div class="form-group">
                            <label>Address</label>
          
                              <input
                                type="text"
                                class="form-control"
                                name="p_address"
                                value="Am fragrance Punjab Society link ghazi raod cantt lahore"
                              />
                            </div>
                    </div>
                </div>
              

                <h4>Delivery address</h4>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Name</label>
          
                              <input
                                type="text"
                                class="form-control"
                                name="d_name" value=""
                              />
                            </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Email</label>
          
                              <input
                                type="email"
                                class="form-control"
                                name="d_email" value=""
                              />
                            </div>
                    </div>
                  
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Phone</label>
          
                              <input
                                type="number"
                                class="form-control"
                                name="d_phone"
                                value=""
                              />
                            </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>City</label>
          
                              <input
                                type="text"
                                class="form-control"
                                name="d_city"
                                value=""
                              />
                            </div>
                    </div>

                    <div class="col-md-8">
                        <div class="form-group">
                            <label>Address</label>
          
                              <input
                                type="text"
                                class="form-control"
                                name="d_address"
                                value=""
                              />
                            </div>
                    </div>
                </div>
                

                <h4>Order Details</h4>
                <hr>
                <div class="section-title mt-0">Service Type</div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" id="customRadioInline1" name="service_type" class="custom-control-input" value="COD">
                            <label class="custom-control-label" for="customRadioInline1">COD</label>
                          </div>
                    </div>
                    <div class="col-md-3">
                        <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" id="customRadioInline12" name="service_type" class="custom-control-input" value="NO.COD">
                            <label class="custom-control-label" for="customRadioInline12">NO.COD</label>
                          </div>
                    </div>
                    <div class="col-md-3">
                        <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" id="customRadioInline123" name="service_type" class="custom-control-input" value="Online Payment">
                            <label class="custom-control-label" for="customRadioInline123">Online Payment</label>
                          </div>
                    </div>
                </div>

                    
                <div id="box">

                <div class="row align-items-center mt-3 clon_row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Order Detail</label>
          
                              <input
                                type="text"
                                class="form-control"
                                name="item_detail[]"
                                value=""
                                required
                              />
                            </div>
                    </div>

                    <div class="col-md-2">
                        <div class="form-group">
                            <label>Qty</label>
          
                              <input
                                type="text"
                                class="form-control"
                                name="qty[]"
                                value=""
                                required
                              />
                            </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label>Price</label>
          
                              <input
                                type="text"
                                class="form-control"
                                name="price[]"
                                value=""
                                required
                              />
                            </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label style="visibility: hidden;">Price</label> <br>
                            <button  class="btn btn-primary" id="more_btn">Add More</button>
                    </div>
                </div>
                </div>


            </div>

                <h4>Other Detail</h4>
                <div class="row">
                  <div class="col-md-3">
                    <div class="form-group">
                        <label for="">no of pieces</label>
                        <input type="number" class="form-control" name="piece">
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-group">
                        <label for="">weight(kg)</label>
                        <input type="number" class="form-control" name="weigth">
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-group">
                        <label for="">Lenght(cm)</label>
                        <input type="number" class="form-control" name="length">
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-group">
                        <label for="">Height(cm)</label>
                        <input type="number" class="form-control" name="heigth">
                    </div>
                  </div>
                </div>
                <h4>Remarks</h4>
                <div class="row mb-3">
                    <div class="col-md-12">
                        <label for="">Remarks</label>
                        <input type="text" class="form-control" name="remarks">
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
                
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
<%- include("../../partials/footer.ejs") %>
